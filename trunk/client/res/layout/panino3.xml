<?xml version="1.0" encoding="utf-8"?> 

			  
			  
<HorizontalScrollView
    android:id="@+id/hor_svID"
    android:layout_width="fill_parent"
    android:layout_height="200px"
    android:scrollbars="none"
    android:fillViewport="false"
    android:focusable="false"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:focusable="false"
        android:background="#FFFFFF"
        android:gravity="center">
        <TableLayout android:layout_width="fill_parent"
                     android:layout_height="fill_parent">
        	<TableRow>
	            <TextView android:id="@+id/caprese" 
	                android:text="Panino Caprese"   
	                android:textColor="#342D7E"
	                android:textSize="12sp"
	                android:textStyle="bold"
	                android:gravity="center"
	                android:layout_width="243px"
	                android:layout_height="fill_parent"></TextView>
            </TableRow>
            <TableRow>
            	<Button android:id="@+id/capreseAdd" 
            			android:text="+"  
            			android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/> 
            </TableRow>
            <TableRow>
            	<Button android:id="@+id/capreseRem" 
            			android:text="-"  
            			android:layout_width="fill_parent"
                        android:layout_height="50px"/> 
            </TableRow>
        </TableLayout>
      	<TableLayout android:layout_width="fill_parent"
                     android:layout_height="fill_parent">
        	<TableRow>
	            <TextView android:id="@+id/crudino" 
	                android:text="Panino Crudino"   
	                android:textColor="#342D7E"
	                android:textSize="12sp"
	                android:textStyle="bold"
	                android:gravity="center"
	                android:layout_width="243px"
	                android:layout_height="fill_parent"></TextView>
            </TableRow>
            <TableRow>
            	<Button android:id="@+id/crudinoAdd" 
            			android:text="+"  
            			android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/> 
            </TableRow>
            <TableRow>
            	<Button android:id="@+id/crudinoRem" 
            			android:text="-"  
            			android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/> 
            </TableRow>
        </TableLayout>
                               
    </LinearLayout>                                     
</HorizontalScrollView>
