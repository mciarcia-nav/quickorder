<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TableLayout android:layout_width="match_parent"
                 android:layout_height="match_parent">
        <TableRow>
            <TextView android:text="Nome:"
            		  android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow>
            <EditText android:id="@+id/nome"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:layout_weight="1"/>
        </TableRow>
        <TableRow>
            <TextView android:text="Cognome:"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow>
            <EditText android:id="@+id/cognome"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:layout_weight="1"/>
        </TableRow>
     	<TableRow>
     	   <TextView android:text="Luogo di Nascita:"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow>
            <EditText android:id="@+id/luogo"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:layout_weight="1"/>
        </TableRow>
        <TableRow>
        	<TextView android:text="Data di Nascita:"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow>
        	<DatePicker android:id="@+id/data"
        				android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow>
     	   <TextView  android:text="Sesso:"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow>
        	<RadioGroup android:id="@+id/sesso" android:layout_width="wrap_content" android:layout_height="wrap_content">
        			<RadioButton android:id="@+id/m" android:text="M" android:layout_height="wrap_content" android:layout_width="wrap_content" android:checked="true"></RadioButton>
        			<RadioButton android:id="@+id/f" android:text="F" android:layout_height="wrap_content" android:layout_width="wrap_content"></RadioButton>
        	</RadioGroup>
        </TableRow>
        <TableRow>
     	   <TextView android:text="Codice Fiscale:"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow>
            <EditText android:id="@+id/cf"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:layout_weight="1"/>
        </TableRow>
        <TableRow>
     	   <TextView android:text="E-Mail:"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow>
            <EditText android:id="@+id/mail"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:layout_weight="1"/>
        </TableRow>
        <TableRow>
        	<Button android:id="@+id/registra" android:text="Registra"  android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>    
        </TableRow>
    </TableLayout>
    
    
</ScrollView>